// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Card {
  id          String  @id @default(cuid())
  title       String
  priority    String
  description String
  Column      Column? @relation(fields: [columnId], references: [id])
  columnId    String?
}

//Add table from members
model Member {
  id    String @id @default(cuid())
  name  String
  email String
  edv   String
}

model Column {
  id       String @id @default(cuid())
  title    String
  color    String
  listCard Card[]
}
