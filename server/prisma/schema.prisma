// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Add table from cards
model Card {
  id          String   @id @default(cuid())
  taskName    String
  priority    String
  validity    DateTime
  description String
}

//Add table from members
model Member {
  id    String @id @default(cuid())
  name  String
  email String
  edv   Int
}

