// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String @unique
  Brands Brands[]
}

model Brands {
  id String @id @default(cuid())
  author User @relation(fields: [authorName], references: [id])
  authorName String
}